        <div><span class="dot"></span></div>
        
    </div>
      <br><br><br>
      <center><a href = "/"><img class="logo" src="logo.png"></a></center>
      <br>
    <center><h1>User Registration</h1><br><br>

    <form onsubmit="return validateForm()" method="post" action="/register">
        <label for="username">Username:<span class = custom_text>*</span>:</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email">

        <label for="password">Password:<span class = custom_text>*</span>:</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>

        <label for="profile_picture">Profile Picture:</label>
        <input type="file" id="profile_picture" name="profile_picture" accept="image/*">
        <center><button type="submit">Register</button><center>
    </form>
    </center>
    <br><br>

    <script>
        function validateForm() {
            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;

            if (username.trim() === '' || password.trim() === '') {
                alert('Username and Password are mandatory fields. Please fill them out.');
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>

</body>
</html>
