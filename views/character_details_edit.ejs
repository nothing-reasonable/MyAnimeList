        </div>
        
       <div class ="characters_box">
            
            <% voiced_by.forEach(va => { %>
                <a href="/person/<%=va[0]%>">
                    <div class="media-placeholder_anime_characters">
                        <div class="vertical-box_inside_a_m">
                            <img class="rounded-image" src="<%= va[5]%>" alt="No image available">
