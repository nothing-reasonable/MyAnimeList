<!DOCTYPE html>
<html>
<head>
    <title>myAnimeList</title>
    <!-- <link rel="stylesheet" href="bg.css">
    <link rel="stylesheet" href="box.css"> -->
    <link rel = "stylesheet" href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%- include('./bg'); %>
    <%- include('./box'); %>
    <% 
        var relMangaLength = produced.length;
        var relAnimeLength = animated.length;
        
        var relMangaOffset;
        var relAnimeOffset;

        if(relMangaLength<4) relMangaOffset=0;
        
        else 
            relMangaOffset= parseInt((relMangaLength-1)/3);
        
        if(relAnimeLength<4) relAnimeOffset=0;
        
        else 
                relAnimeOffset= parseInt((relAnimeLength-1)/3);
        
        var topPercentage = (relMangaLength === 0) ? 90 : 150;
    %>
    <style>

        .fa {
          font-size: 25px;
        }
        
        .checked {
          color: orange;
        }
        
        /* Three column layout */
        .side {
          float: left;
          width: 15%;
          margin-top:10px;
        }
        
        .middle {
          margin-top:10px;
          float: left;
          width: 70%;
        }
        
        /* Place text to the right */
        .right {
          text-align: right;
        }
        
        /* Clear floats after the columns */
        .row:after {
          content: "";
          display: table;
          clear: both;
        }
        
        /* The bar container */
        .bar-container {
          width: 100%;
          background-color: #f1f1f1;
          text-align: center;
          color: white;
        }

        /* Responsive layout - make the columns stack on top of each other instead of next to each other */
        @media (max-width: 400px) {
          .side, .middle {
            width: 100%;
          }
          .right {
            display: none;
          }
        }
        </style>
        <style>
            .characters_box{
                width: 78%; 
                background-color: rgba(161, 20, 144, 0.458);
                border-radius: 15px;
                text-align: center;
                position: absolute;
                padding: 20px;
                top: <%= topPercentage +110 +50*relMangaOffset + 50*relAnimeOffset %>%;
                /* top: 207%; */
                left: 50%;
                transform: translate(-50%, 0%);  
            }
        </style>

    <style>
       
        .title_characters {
            position: absolute;
            top: <%= topPercentage +95 +50*relMangaOffset + 50*relAnimeOffset %>%;
            left: 12%;
            font-size: 35px;
        }




        .studio_area {
            width: 78%;
            background-color: rgba(255, 67, 67, 0.651);
            text-align: center;
            position: absolute;
            padding: 20px;
            top:  <%= 345  +animated.length %>%;
            left: 12%;
            
            border-radius: 15px;
        }

        .studio_placeholder{
            display: inline-flex;
            height: 80px;
            width: 160px;
            background-color: #ff8d14c8;
            color: white;
            border: none;
            border-radius: 15px;
        }

        .studio_name{

            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .manga_area{
            position: absolute;
            top: 45%;
            left: 50%;
            transform: translate(-50%, 0%);
    
        }

        .title_manga{
            
            position: absolute;
            top: 60%;
            left: 12%;
            font-size: 35px;
            
        }

        .anime_area{
            position: absolute;
            top: <%= topPercentage -18  + 50*relMangaOffset %>%;
            left: 50%;
            transform: translate(-50%, 0%);
    
        }

        .title_anime{
            
            position: absolute;
            top: <%= topPercentage + 50*relMangaOffset %>%;
            left: 12%;
            font-size: 35px;
            
        }

        .anime_details_box{
            width: 78%; 
            height: 20%; 
            background-color: rgba(25, 123, 235, 0.548);
            border-radius: 15px;
            
            position: absolute;
            top: <%= 170 %>%;
            left: 50%;
            transform: translate(-50%, -50%);  
        }

        .appeared_in_anime_data_box{
            width: 78%; 
            background-color: rgba(161, 20, 144, 0.458);
            border-radius: 15px;
            text-align: center;
            position: absolute;
            padding: 20px;
            top: <%= topPercentage+12  %>%;
            /* top: 207%; */
            left: 50%;
            transform: translate(-50%, 0%);  
        }

        .watchlist_button {
            position: absolute;
            top: 85%;
            left: 20%;
            transform: translate(-50%, -50%);
            font-size: 16px; /* Adjust font size */
            font-weight: bold; /* Make the font bold */
            font-family: Arial, Helvetica, sans-serif;
            color: #ff00bf;
            background-color: #ff00bf; /* Change background color */
            border: none;
            border-radius: 5px; /* Add some border radius for a rounded look */
            padding: 10px 20px; /* Add padding for better button size */
            cursor: pointer;
            text-align: center;
            text-decoration: none; /* Remove underlines */
            transition: background-color 0.3s ease; /* Add smooth transition for hover effect */
        }

        .watchlist_button:hover {
            background-color: #6200b3; /* Darken background color on hover */
        }

        /* Style the dropdown content */
        .watchlist_button .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ff00bf; /* Change the background color */
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        /* Style the dropdown links */
        .watchlist_button .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            background-color: #ff00bf;
        }

        /* Change color on hover */
        .watchlist_button .dropdown-content a:hover {
            background-color: #6200b3;
        }

        /* Show the dropdown content on hover */
        .watchlist_button:hover .dropdown-content {
            display: block;
        }
        .review_and_rating {
            position: absolute; 
            top: <%= 400  +animated.length %>%;
            left: 50%;
            transform: translate(-50%, 0%);
        }
        .reviews{
            position: absolute;
            top: <%= 480 +animated.length %>%;
            left: 50%;
            transform: translate(-50%, 0%);
        }
        .rating{
            position: absolute;
            top: <%= 103 %>%;
            left: 50%;
            transform: translate(-50%, 0%);
        }

        .manga_add {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .rate {
            float: right;
            height: 46px;
            padding: 0 10px;
        }
        .rate:not(:checked) > input {
            position:absolute;
            top:-9999px;
        }
        .rate:not(:checked) > label {
            float:right;
            width:1em;
            overflow:hidden;
            white-space:nowrap;
            cursor:pointer;
            font-size:30px;
            color:#ccc;
        }
        .rate:not(:checked) > label:before {
            content: 'â˜… ';
        }
        .rate > input:checked ~ label {
            color: #ffc700;    
        }
        .rate:not(:checked) > label:hover,
        .rate:not(:checked) > label:hover ~ label {
            color: #deb217;  
        }
        .rate > input:checked + label:hover,
        .rate > input:checked + label:hover ~ label,
        .rate > input:checked ~ label:hover,
        .rate > input:checked ~ label:hover ~ label,
        .rate > label:hover ~ input:checked ~ label {
            color: #c59b08;
        }
    </style>
    <script>
        function addToWatchlist() {
            console.log("watchlist status changed");
            document.getElementById("watchlist_form").submit();
        }
        function goToEdit()
        {
            window.location.href = "/character/<%= data[0][0] %>/edit";
        }
    </script>
    
</head>
